<isdecorate template="account/pt_account">
	<isinclude template="util/modules">
	
	<isscript>
		var attributes =  {"class": "myClass"};
	</isscript>
	
	<form action="${URLUtils.httpContinue()}" method="post" id="${pdict.CurrentForms.sampleform.htmlName}">
		<fieldset>
		    <div class="formfield">
		        <isinputfield formfield="${pdict.CurrentForms.sampleform.fname}" type="input" attributes="${attributes}" rowClass="yourClass">
		    </div>
		    <div class="formfield">
		        <isinputfield formfield="${pdict.CurrentForms.sampleform.lname}" type="input">
		    </div>
			<div class="formactions">
				<input type="submit" value="${Resource.msg('global.submit','locale',null)}" name="${pdict.CurrentForms.sample.subscribe.htmlName}"/>
			</div>
			<div class="formactions">
				<isinputfield rowclass="input-form-control" formfield="${pdict.CurrentForms.sampleform.myoption}" type="select">
			</div>
			<input type="submit" value="${Resource.msg('global.cancel','locale',null)}" name="${pdict.CurrentForms.sample.cancel.htmlName}"/>
		</fieldset>
	</form>

	<hr>

	<h1>Option Labels and Values</h1>
	<isloop items="${pdict.CurrentForms.sampleform.myoption.options}" var="option">		
		<li>${option.label} - ${option.value}</li>
	</isloop>

<style>
	.myClass{
		color: red;
	}
</style>
	
</isdecorate>
